extends layouts/standard.pug

append vars
    - var bodyClass = bodyClass + 'Upload'

block content
    form(action="/upload" method="POST" enctype="multipart/form-data")
        label(for='tags') Tags (space separated)
        textarea#tags(name="tags", cols="30", rows="5")
        label(for='image') Select image file to upload
        input#image(name="image" type="file")
        input(type="submit" value='Upload')

append scripts
    script(src='js/imageUploadValidate.js')