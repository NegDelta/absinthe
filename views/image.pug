extends layouts/standard.pug

append vars
    - bodyClass = 'Image'
append content
    .tags 
        h1 Tags
        each tag in image.tags
            a.tag(href='') #{tag}
        hr
        h1 Info
        p.
            #[b Added on:] #[=image.addDate.toLocaleDateString()]
            #[b Uploaded by:] #[=image.uploader.username]
        //Todo: uploader
        if session.elevated
            h1 Admin
            a.delete(href="/image/delete/" + image._id) Delete
    .imageContent
        - var path = image.filename;
        img(src= "/img/" + path)